@if (TempData["OKNotification_Message"] != null)
{
    var messages =
    JsonConvert.DeserializeObject<List<NotificationMessageDto>>((string)TempData["OKNotification_Message"]);

    <script>
        toastr.options = {
            "closeButton": true,
            "debug": false,
            "newestOnTop": true,
            "progressBar": true,
            "preventDuplicates": false,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "5000",
            "extendedTimeOut": "1000",
        }

        $(function () {
            var messages = @Html.Raw(JsonConvert.SerializeObject(messages));
            messages.forEach(function (msg) {
                toastr[msg.Type.toLowerCase()](msg.Message, msg.Title);
            });
        });
    </script>
}
