@model LoginViewModel
@{
    Layout = "_Root";
}
<div class="d-flex flex-column flex-lg-row flex-column-fluid">
    <div class="d-flex flex-column flex-lg-row-fluid w-lg-50 p-10 order-2 order-lg-1">
        <div class="d-flex flex-center flex-column flex-lg-row-fluid">
            <div class="w-lg-500px p-10">
                <form class="form w-100" asp-controller="Auth" asp-action="Login" method="POST" id="login-form">
                    <validation-alert />
                    @Html.AntiForgeryToken()
                    <div class="text-center mb-11">
                        <h1 class="text-gray-900 fw-bolder mb-3">@T["Public.Auth.Login.Title"]</h1>
                        <div class="text-gray-500 fw-semibold fs-6">@T["Public.Auth.Login.Subtitle"]</div>
                    </div>
                    <div class="separator separator-content my-14">
                        <span class="w-125px text-gray-500 fw-semibold fs-7"></span>
                    </div>
                    <div class="fv-row mb-8">
                        <input type="text" placeholder="@T["Public.Auth.Login.Email.Placeholder"]" asp-for="Email"
                            class="form-control bg-transparent" />
                        <span class="invalid-feedback" style="display:block;" asp-validation-for="Email"></span>

                    </div>
                    <div class="fv-row mb-3">
                        <input type="password" placeholder="@T["Public.Auth.Login.Password.Placeholder"]"
                            asp-for="Password" class="form-control bg-transparent" />
                        <span class="invalid-feedback" style="display:block;" asp-validation-for="Password"></span>
                    </div>
                    <div class="d-grid mb-10">
                        <button type="submit" id="kt_sign_in_submit" class="btn btn-primary">
                            <span class="indicator-label">@T["Public.Auth.Login.Button.SignIn"]</span>
                            <span class="indicator-progress">@T["Public.Auth.Login.Button.PleaseWait"]
                                <span class="spinner-border spinner-border-sm align-middle ms-2"></span></span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="d-flex flex-lg-row-fluid w-lg-50 bgi-size-cover bgi-position-center order-1 order-lg-2"
        style="background-image: url(/themes/metronic/assets/media/misc/auth-bg.png)">
        <div class="d-flex flex-column flex-center py-7 py-lg-15 px-5 px-md-15 w-100">
            <a href="index.html" class="mb-0 mb-lg-12">
                <img alt="Logo" src="~/themes/metronic/assets/media/logos/logo-black.png" class="h-30px h-lg-45px" />
            </a>
            <h1 class="d-none d-lg-block text-white fs-2qx fw-bolder text-center mb-7">
                @T["Public.Auth.Login.Side.Title"]</h1>
            <div class="d-none d-lg-block text-white fs-base text-center w-50">
                @T["Public.Auth.Login.Side.Description"]
            </div>
        </div>
    </div>
</div>
