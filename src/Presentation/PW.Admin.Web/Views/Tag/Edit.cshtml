@model TagEditViewModel

<div class="card mb-5">
    <div class="card-body py-4">
        <div id="kt_app_toolbar" class="app-toolbar">
            <div class="d-flex flex-stack w-100">
                <div class="page-title d-flex flex-column justify-content-center gap-2">
                    <h1 class="page-heading fw-bold fs-4 text-gray-900 mb-0">Tag Management</h1>
                    <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 text-gray-600 mb-0">
                        <li class="breadcrumb-item"><a href="/" class="text-gray-600 text-hover-primary">Home</a></li>
                        <li class="breadcrumb-item"><span class="bullet bg-gray-400 w-5px h-2px"></span></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Tag")"
                                class="text-gray-600 text-hover-primary">Tag</a></li>
                        <li class="breadcrumb-item"><span class="bullet bg-gray-400 w-5px h-2px"></span></li>
                        <li class="breadcrumb-item text-gray-800 fw-semibold">Edit</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <validation-alert />
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="Id" />

    <div class="card card-flush">
        <div class="card-header card-header-stretch">
            <div class="card-title">
                <h3 class="card-label">Edit: @Model.Name</h3>
            </div>
            <div class="card-toolbar">
                <ul class="nav nav-tabs nav-line-tabs nav-stretch fs-6 border-0">
                    <li class="nav-item">
                        <a class="nav-link active" data-bs-toggle="tab" href="#tab_standard">Standard</a>
                    </li>
                    @foreach (var lang in Model.AvailableLanguages)
                    {
                        <li class="nav-item">
                            <a class="nav-link" data-bs-toggle="tab" href="#tab_lang_@lang.Id">
                                <div class="d-flex align-items-center">
                                    <img file-name="@lang.FlagImageFileName" folder="@StoragePaths.System_Flags"
                                        default-src="/uploads/system/defaults/image.png"
                                        class="w-15px h-15px rounded-1 me-2" alt="@lang.Name" />
                                    @lang.Name
                                </div>
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>

        <div class="card-body pt-5">
            <div class="tab-content">

                <div class="tab-pane fade show active" id="tab_standard" role="tabpanel">

                    <div class="row mb-5">
                        <div class="col-md-12 fv-row">
                            <label asp-for="Name" class="required form-label fs-7 fw-semibold mb-2"></label>
                            <input asp-for="Name" class="form-control form-control-sm form-control-solid"
                                maxlength="@ApplicationLimits.Tag.NameMaxLength" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-5">
                        <div class="col-md-12 fv-row">
                            <label asp-for="Description" class="form-label fs-7 fw-semibold mb-2"></label>
                            <textarea asp-for="Description" class="form-control form-control-sm form-control-solid"
                                rows="4" maxlength="@ApplicationLimits.Tag.DescriptionMaxLength"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mb-5">
                        <div class="col-md-12 fv-row">
                            <label asp-for="ColorHex" class="form-label fs-7 fw-semibold mb-2"></label>

                            <div class="input-group input-group-sm input-group-solid border border-gray-300 rounded">

                                <input asp-for="ColorHex" type="text"
                                    class="form-control form-control-sm form-control-solid ps-4" placeholder="#000000"
                                    maxlength="7" style="text-transform: uppercase; font-family: monospace;" />

                                <div class="input-group-text p-0 border-0 overflow-hidden w-60px cursor-pointer">
                                    <input type="color"
                                        class="form-control form-control-color p-0 border-0 w-100 h-100 cursor-pointer"
                                        id="color_picker_helper"
                                        value="@(string.IsNullOrEmpty(Model.ColorHex) ? "#000000" : Model.ColorHex)"
                                        title="Select Color" />
                                </div>
                            </div>

                            <div class="form-text fs-7 text-muted mt-2">
                                Enter a hex code manually or use the visual picker.
                            </div>
                            <span asp-validation-for="ColorHex" class="text-danger"></span>
                        </div>
                    </div>

                </div>

                @for (int i = 0; i < Model.Translations.Count; i++)
                {
                    <div class="tab-pane fade" id="tab_lang_@Model.Translations[i].LanguageId" role="tabpanel">
                        <input type="hidden" asp-for="Translations[i].LanguageId" />
                        <input type="hidden" asp-for="Translations[i].LanguageCode" />

                        <div
                            class="alert alert-dismissible bg-light-primary border border-primary border-dashed d-flex flex-column flex-sm-row p-5 mb-10">
                            <i class="ki-duotone ki-information-5 fs-2hx text-primary me-4 mb-5 mb-sm-0 flex-shrink-0">
                                <span class="path1"></span><span class="path2"></span><span class="path3"></span>
                            </i>
                            <div class="d-flex flex-column pe-0 pe-sm-10">
                                <h5 class="mb-1 fs-6">
                                    Localization: @Model.AvailableLanguages.FirstOrDefault(x => x.Id ==
                                                                    Model.Translations[i].LanguageId)?.Name
                            </h5>
                            <span class="fs-7 text-gray-600">
                                Values entered here will override the Standard values for this language. Leave empty to
                                use Standard values.
                            </span>
                        </div>
                    </div>
                    <div class="row mb-5">
                        <div class="col-md-12 fv-row">
                            <label asp-for="Translations[i].Name" class="form-label fs-7 fw-semibold mb-2"></label>
                            <input asp-for="Translations[i].Name"
                                class="form-control form-control-sm form-control-solid"
                                maxlength="@ApplicationLimits.Tag.NameMaxLength" />
                            <span asp-validation-for="Translations[i].Name" class="text-danger"></span>
                        </div>
                    </div>

                        <div class="row mb-5">
                            <div class="col-md-12 fv-row">
                                <label asp-for="Translations[i].Description"
                                    class="form-label fs-7 fw-semibold mb-2"></label>
                                <textarea asp-for="Translations[i].Description"
                                    class="form-control form-control-sm form-control-solid" rows="4"
                                    maxlength="@ApplicationLimits.Tag.DescriptionMaxLength"></textarea>
                                <span asp-validation-for="Translations[i].Description" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                                }

            </div>
        </div>

        <div class="card-footer d-flex justify-content-end py-6 px-9">
            <a asp-action="Index" class="btn btn-sm btn-light me-3">Back</a>
            <button type="submit" class="btn btn-sm btn-primary">
                <span class="indicator-label">Update</span>
                <span class="indicator-progress">
                    Please wait...
                    <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                </span>
            </button>
        </div>
    </div>
</form>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const textInput = document.querySelector('input[name="ColorHex"]');
            const colorPicker = document.getElementById('color_picker_helper');

            if (textInput && colorPicker) {
                colorPicker.addEventListener('input', function () {
                    textInput.value = this.value.toUpperCase();
                });

                textInput.addEventListener('input', function () {
                    let val = this.value;
                    if (val.length > 0 && !val.startsWith('#')) {
                        val = '#' + val;
                        textInput.value = val;
                    }
                    if (/^#[0-9A-F]{6}$/i.test(val)) {
                        colorPicker.value = val;
                    }
                });
            }
        });
    </script>
}
