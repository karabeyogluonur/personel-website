@using PW.Web.Areas.Admin.Features.Language.ViewModels
@using PW.Application.Common.Constants
@model LanguageListViewModel

@{
    ViewData["Title"] = "Language Management";
}

<div class="card mb-5">
    <div class="card-body py-4">
        <div id="kt_app_toolbar" class="app-toolbar">
            <div class="d-flex flex-stack w-100">
                <div class="page-title d-flex flex-column justify-content-center gap-2">
                    <h1 class="page-heading fw-bold fs-4 text-gray-900 mb-0">
                        Language Management
                    </h1>

                    <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 text-gray-600 mb-0">
                        <li class="breadcrumb-item">
                            <a href="/" class="text-gray-600 text-hover-primary">Home</a>
                        </li>
                        <li class="breadcrumb-item">
                            <span class="bullet bg-gray-400 w-5px h-2px"></span>
                        </li>
                        <li class="breadcrumb-item">
                            <span class="text-gray-600">Languages</span>
                        </li>
                    </ul>
                </div>
                <div class="d-flex align-items-center">
                    <a href="@Url.Action("Create", "Language")"
                        class="btn btn-sm btn-primary d-flex align-items-center px-4">
                        <i class="ki-outline ki-plus fs-2 me-2"></i>
                        Add Language
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card mb-5">
    <div class="card-body">

        <table class="table table-row-dashed table-hover align-middle gs-0 gy-4">
            <thead>
                <tr class="text-start text-muted fw-bold fs-7 text-uppercase">
                    <th class="min-w-200px">Language</th>
                    <th class="min-w-100px">ISO Code</th>
                    <th class="min-w-100px">Order</th>
                    <th class="min-w-100px">Status</th>
                    <th class="min-w-125px">Created</th>
                    <th class="min-w-125px">Last Update</th>
                    <th class="text-end min-w-100px">Actions</th>
                </tr>
            </thead>

            <tbody class="fw-semibold text-gray-700">
                @if (Model.Languages != null && Model.Languages.Any())
                {
                    @foreach (var lang in Model.Languages.OrderBy(l => l.DisplayOrder))
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="me-3">
                                        @if (!string.IsNullOrEmpty(lang.FlagImageFileName))
                                        {
                                            <img file-name="@lang.FlagImageFileName" folder="@StoragePaths.System_Flags"
                                                default-src="/assets/media/flags/default.svg" class="w-35px h-35px rounded"
                                                alt="@lang.Code" />
                                        }
                                        else
                                        {
                                            <div class="symbol symbol-35px">
                                                <span class="symbol-label bg-light-primary text-primary fw-bold">
                                                    @lang.Code.Substring(0, 2).ToUpper()
                                                </span>
                                            </div>
                                        }
                                    </div>
                                    <div class="d-flex flex-column justify-content-center">
                                        <span class="text-gray-800 fw-bold fs-6 mb-1">@lang.Name</span>
                                    </div>
                                </div>
                            </td>

                            <td>
                                <span class="badge badge-light fw-bold fs-7">@lang.Code</span>
                            </td>

                            <td>
                                <span class="text-gray-600 fw-bold">@lang.DisplayOrder</span>
                            </td>

                            <td>
                                <div class="d-flex flex-column gap-1">
                                    @if (lang.IsDefault)
                                    {
                                        <span class="badge badge-light-primary fw-bold w-auto">Default</span>
                                    }

                                    @if (lang.IsPublished)
                                    {
                                        <span class="badge badge-light-success fw-bold w-auto">Published</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-light-danger fw-bold w-auto">Draft</span>
                                    }
                                </div>
                            </td>

                            <td>
                                <div class="d-flex flex-column">
                                    <span class="text-gray-800 fw-bold fs-7">@lang.CreatedAt.ToString("dd MMM yyyy")</span>
                                    <span class="text-muted fs-8">@lang.CreatedAt.ToString("HH:mm")</span>
                                </div>
                            </td>

                            <td>
                                @if (lang.UpdatedAt.HasValue)
                                {
                                    <div class="d-flex flex-column">
                                        <span class="text-gray-800 fw-bold fs-7">@lang.UpdatedAt.Value.ToString("dd MMM      yyyy")</span>
                                        <span class="text-muted fs-8">@lang.UpdatedAt.Value.ToString("HH:mm")</span>
                                    </div>
                                }
                                else
                                {
                                    <span class="badge badge-light fs-8 fw-bold">Never</span>
                                }
                            </td>

                            <td class="text-end">
                                <a asp-area="Admin" asp-controller="Language" asp-action="Edit" asp-route-id="@lang.Id"
                                    class="btn btn-icon btn-light-primary w-30px h-30px me-3">
                                    <span data-bs-toggle="tooltip" data-bs-trigger="hover" title="Edit">
                                        <i class="ki-duotone ki-pencil fs-3">
                                            <span class="path1"></span><span class="path2"></span>
                                        </i>
                                    </span>
                                </a>

                                <a href="javascript:void(0);" class="btn btn-icon btn-light-danger w-30px h-30px me-3"
                                    data-bs-toggle="modal" data-bs-target="#deleteLanguageModal" data-lang-id="@lang.Id"
                                    data-lang-name="@lang.Name">
                                    <i class="ki-duotone ki-trash fs-2">
                                        <span class="path1"></span><span class="path2"></span>
                                        <span class="path3"></span><span class="path4"></span>
                                        <span class="path5"></span>
                                    </i>
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center text-muted py-10">
                            <div class="d-flex flex-column align-items-center">
                                <i class="ki-outline ki-file-added fs-3x text-muted mb-3"></i>
                                <span class="fs-6 fw-semibold">No languages found.</span>
                                <span class="fs-7">Start by adding a new language to the system.</span>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

<div class="modal fade" id="deleteLanguageModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Delete Language</h5>
                <button type="button" class="btn btn-sm btn-icon" data-bs-dismiss="modal">
                    <i class="ki-outline ki-cross fs-2"></i>
                </button>
            </div>

            <div class="modal-body">
                <p class="fs-6 text-gray-700">
                    Are you sure you want to delete <strong id="deleteLangNameDisplay" class="text-dark"></strong>?
                </p>
                <div class="alert alert-warning d-flex align-items-center p-5 mb-0">
                    <i class="ki-outline ki-shield-cross fs-2hx text-warning me-4"></i>
                    <div class="d-flex flex-column">
                        <span class="fw-bold">Warning</span>
                        <span>This action cannot be undone.</span>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>

                <form id="deleteLanguageForm" asp-area="Admin" asp-controller="Language" asp-action="Delete"
                    method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="deleteLangId" name="id" />
                    <button type="submit" class="btn btn-danger">Yes, Delete</button>
                </form>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script>
        const deleteModal = document.getElementById('deleteLanguageModal');
        deleteModal.addEventListener('show.bs.modal', event => {
            // Button that triggered the modal
            const button = event.relatedTarget;

            // Extract info from data-bs-* attributes
            const langId = button.getAttribute('data-lang-id');
            const langName = button.getAttribute('data-lang-name');

            // Update the modal's content.
            document.getElementById('deleteLangId').value = langId;
            document.getElementById('deleteLangNameDisplay').textContent = langName;
        });
    </script>
}
