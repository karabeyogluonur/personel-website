@using PW.Web.Areas.Admin.Features.Language.ViewModels
@model LanguageCreateViewModel

<div class="card mb-5">
    <div class="card-body py-4">
        <div id="kt_app_toolbar" class="app-toolbar">
            <div class="d-flex flex-stack w-100">
                <div class="page-title d-flex flex-column justify-content-center gap-2">
                    <h1 class="page-heading fw-bold fs-2 text-gray-900 mb-0">
                        Language Management
                    </h1>
                    <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 text-gray-600 mb-0">
                        <li class="breadcrumb-item">
                            <a href="/" class="text-gray-600 text-hover-primary">Home</a>
                        </li>
                        <li class="breadcrumb-item">
                            <span class="bullet bg-gray-400 w-5px h-2px"></span>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="@Url.Action("Index", "Language")"
                                class="text-gray-600 text-hover-primary">Languages</a>
                        </li>
                        <li class="breadcrumb-item">
                            <span class="bullet bg-gray-400 w-5px h-2px"></span>
                        </li>
                        <li class="breadcrumb-item text-gray-800 fw-semibold">
                            Create
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<div
    class="alert alert-dismissible bg-light-warning border border-warning border-dashed d-flex flex-column flex-sm-row w-100 p-5 mb-10">

    <i class="ki-duotone ki-information-5 fs-2hx text-warning me-4 mb-5 mb-sm-0 flex-shrink-0">
        <span class="path1"></span><span class="path2"></span><span class="path3"></span>
    </i>

    <div class="d-flex flex-column pe-0 pe-sm-10 flex-grow-1">
        <span class="fw-bold text-gray-900 fs-6 mb-2">Important Implementation Requirements</span>

        <ul class="text-gray-600 fs-7 mb-0 lh-base ps-4">
            <li class="mb-1">
                <strong>Restart Required:</strong> Application must be restarted to register the new ISO code.
            </li>
            <li class="mb-1">
                <strong>Resource File:</strong> Manually create a file in <code
                    class=" border-warning border border-dashed px-1 py-1 rounded fs-8 text-gray-800">PW.Web/Resources</code>
            </li>
            <li class="mb-1">
                <strong>Naming:</strong> File name must be <code
                    class=" border-warning border border-dashed px-1 py-1 rounded fs-8 text-gray-800">SharedResources.{iso-code}.resx</code>
                (e.g., <em>SharedResources.de.resx</em>).
            </li>
            <li>
                <strong>Tip:</strong> Copy an existing <code>.resx</code> file and rename it.
            </li>
        </ul>
    </div>

    <button type="button" class="btn btn-icon btn-sm btn-active-color-warning ms-sm-auto align-self-sm-start"
        data-bs-dismiss="alert">
        <i class="ki-duotone ki-cross fs-2">
            <span class="path1"></span><span class="path2"></span>
        </i>
    </button>
</div>

<div class="card mb-5">
    <div class="card-body">
        <form asp-controller="Language" asp-action="Create" method="post" class="form" enctype="multipart/form-data">

            <validation-alert />

            @Html.AntiForgeryToken()

            <div class="row">
                <div class="col-md-6 fv-row mb-7">
                    <label asp-for="Name" class="required form-label fs-7 fw-semibold">Language Name</label>
                    <input asp-for="Name" class="form-control form-control-sm" placeholder="e.g. English" />
                    <span asp-validation-for="Name" class="fv-plugins-message-container invalid-feedback fs-8"></span>
                </div>

                <div class="col-md-6 fv-row mb-7">
                    <label asp-for="Code" class="required form-label fs-7 fw-semibold">ISO Code</label>
                    <input asp-for="Code" class="form-control form-control-sm" placeholder="e.g. en" />
                    <div class="text-muted fs-8 mt-1">Use format like 'en' or 'tr'.</div>
                    <span asp-validation-for="Code" class="fv-plugins-message-container invalid-feedback fs-8"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 fv-row mb-7">
                    <label asp-for="FlagImage" class="form-label fs-7 fw-semibold">Flag Icon</label>
                    <input asp-for="FlagImage" type="file" class="form-control form-control-sm"
                        accept=".png, .jpg, .jpeg, .svg" />
                    <div class="text-muted fs-8 mt-1">Allowed file types: png, jpg, jpeg, svg.</div>
                    <span asp-validation-for="FlagImage"
                        class="fv-plugins-message-container invalid-feedback fs-8"></span>
                </div>

                <div class="col-md-6 fv-row mb-7">
                    <label asp-for="DisplayOrder" class="required form-label fs-7 fw-semibold">Display Order</label>
                    <input asp-for="DisplayOrder" type="number" class="form-control form-control-sm" />
                    <span asp-validation-for="DisplayOrder"
                        class="fv-plugins-message-container invalid-feedback fs-8"></span>
                </div>
            </div>

            <div class="separator separator-dashed my-6"></div>

            <div class="row">
                <div class="col-md-6 fv-row mb-7">
                    <div class="d-flex flex-stack">
                        <div class="me-5">
                            <label asp-for="IsPublished" class="fs-6 fw-semibold form-label">Publish Language</label>
                            <div class="fs-7 fw-semibold text-muted">Check this to make the language visible to users
                                immediately.</div>
                        </div>
                        <label class="form-check form-switch form-check-custom form-check-solid">
                            <input asp-for="IsPublished" class="form-check-input" type="checkbox" />
                        </label>
                    </div>
                </div>

                <div class="col-md-6 fv-row mb-7">
                    <div class="d-flex flex-stack">
                        <div class="me-5">
                            <label asp-for="IsDefault" class="fs-6 fw-semibold form-label">Set as Default</label>
                            <div class="fs-7 fw-semibold text-muted">Make this the default language for the application.
                            </div>
                        </div>
                        <label class="form-check form-switch form-check-custom form-check-solid">
                            <input asp-for="IsDefault" class="form-check-input" type="checkbox" />
                        </label>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-end pt-5">
                <a asp-action="Index" class="btn btn-sm btn-light me-3">Cancel</a>

                <button type="submit" class="btn btn-sm btn-primary">
                    <span class="indicator-label">Create</span>
                    <span class="indicator-progress">
                        Please wait...
                        <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                    </span>
                </button>
            </div>
        </form>
    </div>
</div>
