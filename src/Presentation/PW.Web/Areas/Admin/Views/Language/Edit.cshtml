@model LanguageEditViewModel

<div class="card mb-5">
    <div class="card-body py-4">
        <div id="kt_app_toolbar" class="app-toolbar">
            <div class="d-flex flex-stack w-100">
                <div class="page-title d-flex flex-column justify-content-center gap-2">
                    <h1 class="page-heading fw-bold fs-2 text-gray-900 mb-0">
                        Edit Language
                    </h1>
                    <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 text-gray-600 mb-0">
                        <li class="breadcrumb-item">
                            <a href="/" class="text-gray-600 text-hover-primary">Home</a>
                        </li>
                        <li class="breadcrumb-item">
                            <span class="bullet bg-gray-400 w-5px h-2px"></span>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="@Url.Action("Index", "Language")"
                                class="text-gray-600 text-hover-primary">Languages</a>
                        </li>
                        <li class="breadcrumb-item">
                            <span class="bullet bg-gray-400 w-5px h-2px"></span>
                        </li>
                        <li class="breadcrumb-item text-gray-800 fw-semibold">
                            Edit
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card mb-5">
    <div class="card-body">
        <form asp-controller="Language" asp-action="Edit" method="post" class="form" enctype="multipart/form-data">

            <validation-summary />

            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CurrentFlagFileName" />

            <div class="row">
                <div class="col-md-6 fv-row mb-7">
                    <label asp-for="Name" class="required form-label fs-7 fw-semibold"></label>

                    <input asp-for="Name" class="form-control form-control-sm" placeholder="e.g. English"
                        maxlength="@ApplicationLimits.Common.NameMaxLength" />

                    <span asp-validation-for="Name" class="fv-plugins-message-container invalid-feedback fs-8"></span>
                </div>

                <div class="col-md-6 fv-row mb-7">
                    <label asp-for="Code" class="required form-label fs-7 fw-semibold"></label>

                    <input asp-for="Code" class="form-control form-control-sm" placeholder="e.g. en"
                        maxlength="@ApplicationLimits.Language.CodeMaxLength" />

                    <div class="text-muted fs-8 mt-1">2-letter ISO code (e.g. 'en', 'tr'). Max
                        @ApplicationLimits.Language.CodeMaxLength chars.</div>
                    <span asp-validation-for="Code" class="fv-plugins-message-container invalid-feedback fs-8"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 fv-row mb-7">
                    <label asp-for="FlagImage" class="form-label fs-7 fw-semibold">New Flag Icon</label>

                    <input asp-for="FlagImage" type="file" class="form-control form-control-sm"
                        accept="@string.Join(",", ApplicationLimits.Language.AllowedFlagExtensions)" />

                    <div class="text-muted fs-8 mt-1">
                        Leave empty to keep current icon.
                        Allowed: @string.Join(", ", ApplicationLimits.Language.AllowedFlagExtensions).
                        Max size: @(ApplicationLimits.Language.MaxFlagSizeBytes / 1024 / 1024) MB.
                    </div>

                    <span asp-validation-for="FlagImage"
                        class="fv-plugins-message-container invalid-feedback fs-8"></span>
                </div>

                <div class="col-md-6 fv-row mb-7">
                    <label class="form-label fs-7 fw-semibold">Current Icon</label>
                    <div class="d-flex align-items-center p-2 border border-gray-300 border-dashed rounded">
                        <div class="symbol symbol-20px me-3">
                            <img file-name="@Model.CurrentFlagFileName" folder="@StoragePaths.System_Flags"
                                default-src="/assets/media/flags/default.svg" alt="Current Flag" />
                        </div>
                        <div class="d-flex flex-column">
                            <span class="text-gray-800 fs-7 fw-bold">
                                @Model.CurrentFlagFileName
                                <span class="text-muted fs-8">(Currently active)</span>
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 fv-row mb-7">
                    <label asp-for="DisplayOrder" class="required form-label fs-7 fw-semibold"></label>
                    <input asp-for="DisplayOrder" type="number" class="form-control form-control-sm" />
                    <span asp-validation-for="DisplayOrder"
                        class="fv-plugins-message-container invalid-feedback fs-8"></span>
                </div>
            </div>

            <div class="separator separator-dashed my-6"></div>

            <div class="row">
                <div class="col-md-6 fv-row mb-7">
                    <div class="d-flex flex-stack">
                        <div class="me-5">
                            <label asp-for="IsPublished" class="fs-6 fw-semibold form-label">Publish Language</label>
                            <div class="fs-7 fw-semibold text-muted">Visible to users immediately.</div>
                        </div>
                        <label class="form-check form-switch form-check-custom form-check-solid">
                            <input asp-for="IsPublished" class="form-check-input" type="checkbox" />
                        </label>
                    </div>
                </div>

                <div class="col-md-6 fv-row mb-7">
                    <div class="d-flex flex-stack">
                        <div class="me-5">
                            <label asp-for="IsDefault" class="fs-6 fw-semibold form-label">Set as Default</label>
                            <div class="fs-7 fw-semibold text-muted">Make this the primary language.</div>
                        </div>
                        <label class="form-check form-switch form-check-custom form-check-solid">
                            <input asp-for="IsDefault" class="form-check-input" type="checkbox" />
                        </label>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-end pt-5">
                <a asp-action="Index" class="btn btn-sm btn-light me-3">Cancel</a>

                <button type="submit" class="btn btn-sm btn-primary">
                    <span class="indicator-label">Save Changes</span>
                    <span class="indicator-progress">
                        Please wait...
                        <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                    </span>
                </button>
            </div>
        </form>
    </div>
</div>
