@model ProfileSettingsViewModel

@{
    ViewData["Title"] = "Owner Profile Configuration";
}

<div class="card mb-5">
    <div class="card-body py-4">
        <div id="kt_app_toolbar" class="app-toolbar">
            <div class="d-flex flex-stack w-100">
                <div class="page-title d-flex flex-column justify-content-center gap-2">
                    <h1 class="page-heading fw-bold fs-4 text-gray-900 mb-0">
                        Owner Profile Configuration
                    </h1>
                    <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 text-gray-600 mb-0">
                        <li class="breadcrumb-item">
                            <a href="/" class="text-gray-600 text-hover-primary">Home</a>
                        </li>
                        <li class="breadcrumb-item">
                            <span class="bullet bg-gray-400 w-5px h-2px"></span>
                        </li>
                        <li class="breadcrumb-item">
                            <span class="text-gray-600">Configuration</span>
                        </li>
                        <li class="breadcrumb-item">
                            <span class="bullet bg-gray-400 w-5px h-2px"></span>
                        </li>
                        <li class="breadcrumb-item text-gray-800 fw-semibold">
                            Public Profile
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<form asp-controller="ProfileSettings" asp-action="Index" method="post" enctype="multipart/form-data" class="form">

    <validation-summary />
    @Html.AntiForgeryToken()

    <div class="card card-flush">
        <div class="card-header card-header-stretch">
            <div class="card-toolbar w-100">
                <ul class="nav nav-tabs nav-line-tabs nav-stretch fs-6 border-0 w-100">
                    <li class="nav-item">
                        <a class="nav-link active" data-bs-toggle="tab" href="#tab_standard">Standard</a>
                    </li>
                    @foreach (var lang in Model.AvailableLanguages)
                    {
                        <li class="nav-item">
                            <a class="nav-link" data-bs-toggle="tab" href="#tab_lang_@lang.Id">
                                <div class="d-flex align-items-center">
                                    <img file-name="@lang.FlagImageFileName" folder="@StoragePaths.System_Flags"
                                        default-src="/uploads/system/blanks/image.svg" class="w-15px h-15px rounded-1 me-2"
                                        alt="@lang.Name" />
                                    @lang.Name
                                </div>
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>

        <div class="card-body pt-5">
            <div class="tab-content" id="profileTabContent">

                <div class="tab-pane fade show active" id="tab_standard" role="tabpanel">

                    <div class="row mb-7">
                        <div class="col-md-6">
                            <label asp-for="AvatarImage" class="form-label fs-7 fw-semibold mb-2"></label>
                            <div class="d-flex align-items-center gap-5 mb-3">
                                <div class="symbol symbol-100px symbol-circle border border-gray-300 border-dashed p-2">
                                    <img file-name="@Model.AvatarPath" folder="@StoragePaths.System_Profiles"
                                        default-src="/uploads/system/blanks/avatar.png" alt="Avatar" />
                                </div>
                                <div class="d-flex flex-column">
                                    @if (!string.IsNullOrEmpty(Model.AvatarPath))
                                    {
                                        <div class="form-check form-check-custom form-check-solid mb-2">
                                            <input class="form-check-input" type="checkbox" asp-for="RemoveAvatar" />
                                            <label class="form-check-label text-gray-700 fs-7"
                                                asp-for="RemoveAvatar"></label>
                                        </div>
                                    }
                                    <input type="file" asp-for="AvatarImage" class="form-control form-control-sm"
                                        accept="@string.Join(",", ApplicationLimits.ProfileSettings.AllowedImageExtensions)" />

                                    <div class="text-muted fs-8 mt-2">
                                        Allowed: @string.Join(", ",
                                                                                ApplicationLimits.ProfileSettings.AllowedImageExtensions).
                                        Max: @(ApplicationLimits.ProfileSettings.MaxImageSizeBytes / 1024 / 1024) MB.
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="CoverImage" class="form-label fs-7 fw-semibold mb-2"></label>
                            <div class="d-flex align-items-center gap-5 mb-3">
                                <div class="symbol symbol-100px border border-gray-300 border-dashed p-2">
                                    <img file-name="@Model.CoverPath" folder="@StoragePaths.System_Profiles"
                                        default-src="/uploads/system/blanks/image.svg" style="object-fit:cover"
                                        alt="Cover" />
                                </div>
                                <div class="d-flex flex-column">
                                    @if (!string.IsNullOrEmpty(Model.CoverPath))
                                    {
                                        <div class="form-check form-check-custom form-check-solid mb-2">
                                            <input class="form-check-input" type="checkbox" asp-for="RemoveCover" />
                                            <label class="form-check-label text-gray-700 fs-7"
                                                asp-for="RemoveCover"></label>
                                        </div>
                                    }
                                    <input type="file" asp-for="CoverImage" class="form-control form-control-sm"
                                        accept="@string.Join(",", ApplicationLimits.ProfileSettings.AllowedImageExtensions)" />

                                    <div class="text-muted fs-8 mt-2">
                                        Allowed: @string.Join(", ",
                                                                                ApplicationLimits.ProfileSettings.AllowedImageExtensions).
                                        Max: @(ApplicationLimits.ProfileSettings.MaxImageSizeBytes / 1024 / 1024) MB.
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="separator separator-dashed my-6"></div>

                    <div class="row mb-5">
                        <div class="col-md-6 fv-row mb-7">
                            <label asp-for="FirstName" class="required form-label fs-7 fw-semibold"></label>
                            <input asp-for="FirstName" class="form-control form-control-sm"
                                maxlength="@ApplicationLimits.ProfileSettings.FirstNameMaxLength" />
                            <span asp-validation-for="FirstName"
                                class="fv-plugins-message-container invalid-feedback fs-8"></span>
                        </div>
                        <div class="col-md-6 fv-row mb-7">
                            <label asp-for="LastName" class="required form-label fs-7 fw-semibold"></label>
                            <input asp-for="LastName" class="form-control form-control-sm"
                                maxlength="@ApplicationLimits.ProfileSettings.LastNameMaxLength" />
                            <span asp-validation-for="LastName"
                                class="fv-plugins-message-container invalid-feedback fs-8"></span>
                        </div>
                    </div>

                    <div class="row mb-5">
                        <div class="col-md-12 fv-row mb-7">
                            <label asp-for="JobTitle" class="form-label fs-7 fw-semibold"></label>
                            <input asp-for="JobTitle" class="form-control form-control-sm"
                                maxlength="@ApplicationLimits.ProfileSettings.JobTitleMaxLength" />
                        </div>
                    </div>

                    <div class="row mb-5">
                        <div class="col-md-12 fv-row mb-7">
                            <label asp-for="Biography" class="form-label fs-7 fw-semibold"></label>
                            <textarea asp-for="Biography" class="form-control form-control-sm" rows="4"
                                maxlength="@ApplicationLimits.ProfileSettings.BiographyMaxLength"></textarea>
                        </div>
                    </div>
                </div>

                @for (int i = 0; i < Model.Translations.Count; i++)
                {
                    <div class="tab-pane fade" id="tab_lang_@Model.Translations[i].LanguageId" role="tabpanel">

                        <input type="hidden" asp-for="Translations[i].LanguageId" />
                        <input type="hidden" asp-for="Translations[i].LanguageCode" />

                        <div
                            class="alert alert-dismissible bg-light-primary border border-primary border-dashed d-flex flex-column flex-sm-row p-5 mb-10">
                            <i class="ki-duotone ki-information-5 fs-2hx text-primary me-4 mb-5 mb-sm-0 flex-shrink-0">
                                <span class="path1"></span><span class="path2"></span><span class="path3"></span>
                            </i>
                            <div class="d-flex flex-column pe-0 pe-sm-10">
                                <h5 class="mb-1 fs-6">Localization: @Model.AvailableLanguages.FirstOrDefault(x => x.Id ==
                                                                    Model.Translations[i].LanguageId)?.Name</h5>
                            <span class="fs-7 text-gray-600">Values entered here will override the Standard values for
                                this language. Leave empty to use Standard values.</span>
                        </div>
                    </div>

                        <div class="row mb-7">
                            <div class="col-md-6">
                                <label asp-for="@Model.Translations[i].AvatarImage"
                                    class="form-label fs-7 fw-semibold mb-2"></label>
                                <div class="d-flex align-items-center gap-5 mb-3">
                                    <div class="symbol symbol-100px symbol-circle border border-gray-300 border-dashed p-2">
                                        <img file-name="@Model.Translations[i].AvatarPath"
                                            folder="@StoragePaths.System_Profiles"
                                            default-src="/uploads/system/blanks/avatar.png" alt="Avatar Local" />
                                    </div>
                                    <div class="d-flex flex-column">
                                    @if (!string.IsNullOrEmpty(Model.Translations[i].AvatarPath))
                                        {
                                            <div class="form-check form-check-custom form-check-solid mb-2">
                                                <input class="form-check-input" type="checkbox"
                                                    asp-for="Translations[i].RemoveAvatar" />
                                                <label class="form-check-label text-gray-700 fs-7"
                                                    asp-for="Translations[i].RemoveAvatar"></label>
                                            </div>
                                        }
                                        <input type="file" asp-for="Translations[i].AvatarImage"
                                            class="form-control form-control-sm"
                                            accept="@string.Join(",", ApplicationLimits.ProfileSettings.AllowedImageExtensions)" />

                                        <div class="text-muted fs-8 mt-2">
                                            Allowed: @string.Join(", ",
                                                                                    ApplicationLimits.ProfileSettings.AllowedImageExtensions).
                                    </div>
                                </div>
                            </div>
                        </div>

                            <div class="col-md-6">
                                <label asp-for="@Model.Translations[i].CoverImage"
                                    class="form-label fs-7 fw-semibold mb-2"></label>
                                <div class="d-flex align-items-center gap-5 mb-3">
                                    <div class="symbol symbol-100px border border-gray-300 border-dashed p-2">
                                        <img file-name="@Model.Translations[i].CoverPath"
                                            folder="@StoragePaths.System_Profiles"
                                            default-src="/uploads/system/blanks/image.svg" style="object-fit:cover"
                                            alt="Cover Local" />
                                    </div>
                                    <div class="d-flex flex-column">
                                    @if (!string.IsNullOrEmpty(Model.Translations[i].CoverPath))
                                        {
                                            <div class="form-check form-check-custom form-check-solid mb-2">
                                                <input class="form-check-input" type="checkbox"
                                                    asp-for="Translations[i].RemoveCover" />
                                                <label class="form-check-label text-gray-700 fs-7"
                                                    asp-for="Translations[i].RemoveCover"></label>
                                            </div>
                                        }
                                        <input type="file" asp-for="Translations[i].CoverImage"
                                            class="form-control form-control-sm"
                                            accept="@string.Join(",", ApplicationLimits.ProfileSettings.AllowedImageExtensions)" />

                                        <div class="text-muted fs-8 mt-2">
                                            Allowed: @string.Join(", ",
                                                                                    ApplicationLimits.ProfileSettings.AllowedImageExtensions).
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                        <div class="row mb-5">
                            <div class="col-md-6 fv-row mb-7">
                                <label asp-for="@Model.Translations[i].FirstName"
                                    class="form-label fs-7 fw-semibold"></label>
                                <input asp-for="Translations[i].FirstName" class="form-control form-control-sm"
                                    placeholder="Standard: @Model.FirstName"
                                    maxlength="@ApplicationLimits.ProfileSettings.FirstNameMaxLength" />
                            </div>
                            <div class="col-md-6 fv-row mb-7">
                                <label asp-for="@Model.Translations[i].LastName"
                                    class="form-label fs-7 fw-semibold"></label>
                                <input asp-for="Translations[i].LastName" class="form-control form-control-sm"
                                    placeholder="Standard: @Model.LastName"
                                    maxlength="@ApplicationLimits.ProfileSettings.LastNameMaxLength" />
                            </div>
                        </div>

                        <div class="row mb-5">
                            <div class="col-md-12 fv-row mb-7">
                                <label asp-for="@Model.Translations[i].JobTitle"
                                    class="form-label fs-7 fw-semibold"></label>
                                <input asp-for="Translations[i].JobTitle" class="form-control form-control-sm"
                                    placeholder="Standard: @Model.JobTitle"
                                    maxlength="@ApplicationLimits.ProfileSettings.JobTitleMaxLength" />
                            </div>
                        </div>

                        <div class="row mb-5">
                            <div class="col-md-12 fv-row mb-7">
                                <label asp-for="@Model.Translations[i].Biography"
                                    class="form-label fs-7 fw-semibold"></label>
                                <textarea asp-for="Translations[i].Biography" class="form-control form-control-sm" rows="4"
                                    placeholder="Standard: @Model.Biography"
                                    maxlength="@ApplicationLimits.ProfileSettings.BiographyMaxLength"></textarea>
                            </div>
                        </div>

                    </div>
                                }
            </div>
        </div>

        <div class="card-footer d-flex justify-content-end py-6 px-9">
            <a asp-action="Index" class="btn btn-sm btn-light me-3">Discard</a>

            <button type="submit" class="btn btn-sm btn-primary">
                <span class="indicator-label">Save Changes</span>
                <span class="indicator-progress">
                    Please wait...
                    <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                </span>
            </button>
        </div>
    </div>
</form>
