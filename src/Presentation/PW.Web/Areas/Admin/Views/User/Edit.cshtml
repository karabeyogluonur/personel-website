@model UserEditViewModel

<div class="card mb-5">
    <div class="card-body py-4">
        <div id="kt_app_toolbar" class="app-toolbar">
            <div class="d-flex flex-stack w-100">
                <div class="page-title d-flex flex-column justify-content-center gap-2">
                    <h1 class="page-heading fw-bold fs-2 text-gray-900 mb-0"> User Management </h1>
                    <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 text-gray-600 mb-0">
                        <li class="breadcrumb-item"> <a href="/" class="text-gray-600 text-hover-primary">Home</a> </li>
                        <li class="breadcrumb-item"> <span class="bullet bg-gray-400 w-5px h-2px"></span> </li>
                        <li class="breadcrumb-item"> <a href="/Admin/User/Index"
                                class="text-gray-600 text-hover-primary">User</a> </li>
                        <li class="breadcrumb-item"> <span class="bullet bg-gray-400 w-5px h-2px"></span> </li>
                        <li class="breadcrumb-item text-gray-800 fw-semibold"> Edit </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>



<div class="card mb-5">
    <div class="card-body">
        <form asp-controller="User" asp-action="Edit" method="post" class="form">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div class="row">
                <div class="col-md-6 fv-row mb-4">
                    <label asp-for="FirstName" class="required form-label fs-7 fw-semibold">First Name</label>
                    <input asp-for="FirstName" class="form-control form-control-sm" />
                    <span asp-validation-for="FirstName"
                        class="fv-plugins-message-container invalid-feedback fs-8"></span>
                </div>

                <div class="col-md-6 fv-row mb-4">
                    <label asp-for="LastName" class="required form-label fs-7 fw-semibold">Last Name</label>
                    <input asp-for="LastName" class="form-control form-control-sm" />
                    <span asp-validation-for="LastName"
                        class="fv-plugins-message-container invalid-feedback fs-8"></span>
                </div>
            </div>

            <div class="separator separator-dashed my-6"></div>

            <div class="fv-row mb-7">
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="changePasswordToggle"
                        asp-for="ChangePassword" />
                    <label class="form-check-label" for="changePasswordToggle">Change password</label>
                </div>
            </div>

            <div id="passwordFields" style="display:none;">
                <div class="row">
                    <div class="col-md-6 fv-row mb-4">
                        <label asp-for="Password" class="form-label fs-7 fw-semibold">New Password</label>
                        <input asp-for="Password" type="password" class="form-control form-control-sm" />
                        <span asp-validation-for="Password"
                            class="fv-plugins-message-container invalid-feedback fs-8"></span>
                    </div>

                    <div class="col-md-6 fv-row mb-4">
                        <label asp-for="ConfirmPassword" class="form-label fs-7 fw-semibold">Confirm Password</label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control form-control-sm" />
                        <span asp-validation-for="ConfirmPassword"
                            class="fv-plugins-message-container invalid-feedback fs-8"></span>
                    </div>
                </div>

                <div class="separator separator-dashed my-6"></div>
            </div>

            <div class="fv-row mb-7">
                <label class="required form-label fs-7 fw-semibold">User Roles</label>
                <select asp-for="SelectedRoles" asp-items="Model.AvailableRoles" class="form-select form-select-sm"
                    multiple="multiple" data-control="select2" data-placeholder="Select user roles">
                </select>
                <span asp-validation-for="SelectedRoles"
                    class="fv-plugins-message-container invalid-feedback fs-8"></span>
            </div>

            <div class="d-flex justify-content-end pt-5">
                <a asp-action="Index" class="btn btn-sm btn-light me-3">Cancel</a>

                <button type="submit" class="btn btn-sm btn-primary">
                    <span class="indicator-label">Update</span>
                    <span class="indicator-progress">
                        Please wait...
                        <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                    </span>
                </button>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <script>
        (function () {
            const toggle = document.getElementById('changePasswordToggle');
            const pwContainer = document.getElementById('passwordFields');
            const pwInputs = pwContainer.querySelectorAll('input');

            function update() {
                if (toggle.checked) {
                    pwContainer.style.display = '';
                    pwInputs.forEach(i => i.removeAttribute('disabled'));
                } else {
                    pwContainer.style.display = 'none';
                    pwInputs.forEach(i => i.setAttribute('disabled', 'disabled'));
                }
            }
            update();
            toggle.addEventListener('change', update);
        })();
    </script>
}
