@model UserEditViewModel

<div class="card mb-5">
    <div class="card-body py-4">
        <div id="kt_app_toolbar" class="app-toolbar">
            <div class="d-flex flex-stack w-100">
                <div class="page-title d-flex flex-column justify-content-center gap-2">
                    <h1 class="page-heading fw-bold fs-4 text-gray-900 mb-0"> User Management </h1>
                    <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 text-gray-600 mb-0">
                        <li class="breadcrumb-item"> <a href="/" class="text-gray-600 text-hover-primary">Home</a> </li>
                        <li class="breadcrumb-item"> <span class="bullet bg-gray-400 w-5px h-2px"></span> </li>
                        <li class="breadcrumb-item"> <a href="@Url.Action("Index", "User")"
                                class="text-gray-600 text-hover-primary">User</a> </li>
                        <li class="breadcrumb-item"> <span class="bullet bg-gray-400 w-5px h-2px"></span> </li>
                        <li class="breadcrumb-item text-gray-800 fw-semibold"> Edit </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card mb-5">
    <div class="card-body">
        <form asp-controller="User" asp-action="Edit" method="post" class="form">
            <validation-alert />
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div class="row mb-5">
                <div class="col-md-6 fv-row">
                    <label asp-for="FirstName" class="required form-label fs-7 fw-semibold mb-2"></label>
                    <input asp-for="FirstName" class="form-control form-control-sm form-control-solid"
                        maxlength="@ApplicationLimits.User.FirstNameMaxLength" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="col-md-6 fv-row">
                    <label asp-for="LastName" class="required form-label fs-7 fw-semibold mb-2"></label>
                    <input asp-for="LastName" class="form-control form-control-sm form-control-solid"
                        maxlength="@ApplicationLimits.User.LastNameMaxLength" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-5">
                <div class="col-md-12 fv-row">
                    <label asp-for="Email" class="required form-label fs-7 fw-semibold mb-2"></label>
                    <input asp-for="Email" class="form-control form-control-sm form-control-solid" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <div class="separator separator-dashed my-6"></div>

            <div class="row mb-5">
                <div class="col-md-12">
                    <label asp-for="ChangePassword" class="form-label fs-7 fw-semibold mb-2"></label>
                    <div
                        class="d-flex align-items-center bg-light-primary rounded p-5 border border-primary border-dashed w-100">
                        <i class="ki-duotone ki-key fs-2tx text-primary me-4">
                            <span class="path1"></span><span class="path2"></span>
                        </i>
                        <div class="flex-grow-1 me-3">
                            <span class="fw-bold text-gray-800 fs-6 d-block">Change Password</span>
                            <span class="text-muted fw-semibold fs-7">Toggle to enable password change fields.</span>
                        </div>
                        <div class="form-check form-switch form-check-custom form-check-primary form-check-solid">
                            <input asp-for="ChangePassword" class="form-check-input h-25px w-45px" type="checkbox"
                                id="changePasswordToggle" />
                        </div>
                    </div>
                </div>
            </div>

            <div id="passwordFields" style="display:none;">
                <div class="row mb-5">
                    <div class="col-md-6 fv-row">
                        <label asp-for="Password" class="form-label fs-7 fw-semibold mb-2"></label>
                        <input asp-for="Password" type="password"
                            class="form-control form-control-sm form-control-solid" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 fv-row">
                        <label asp-for="ConfirmPassword" class="form-label fs-7 fw-semibold mb-2"></label>
                        <input asp-for="ConfirmPassword" type="password"
                            class="form-control form-control-sm form-control-solid" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="separator separator-dashed my-6"></div>
            </div>

            <div class="row mb-5">
                <div class="col-md-12 fv-row">
                    <label asp-for="SelectedRoles" class="required form-label fs-7 fw-semibold mb-2"></label>
                    <select asp-for="SelectedRoles" asp-items="Model.AvailableRoles"
                        class="form-select form-select-sm form-select-solid" multiple="multiple" data-control="select2"
                        data-placeholder="Select user roles">
                    </select>
                    <span asp-validation-for="SelectedRoles" class="text-danger"></span>
                </div>
            </div>

            <div class="d-flex justify-content-end pt-5">
                <a asp-action="Index" class="btn btn-sm btn-light me-3">İptal</a>
                <button type="submit" class="btn btn-sm btn-primary">
                    <span class="indicator-label">Güncelle</span>
                    <span class="indicator-progress">
                        Please wait...
                        <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                    </span>
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        (function () {
            const toggle = document.getElementById('changePasswordToggle');
            const pwContainer = document.getElementById('passwordFields');
            const pwInputs = pwContainer.querySelectorAll('input');

            function update() {
                if (toggle.checked) {
                    pwContainer.style.display = '';
                    pwInputs.forEach(i => i.removeAttribute('disabled'));
                } else {
                    pwContainer.style.display = 'none';
                    pwInputs.forEach(i => i.setAttribute('disabled', 'disabled'));
                }
            }
            update();
            toggle.addEventListener('change', update);
        })();
    </script>
}
